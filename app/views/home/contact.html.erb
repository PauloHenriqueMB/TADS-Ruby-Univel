   <!-- Page Content -->
    <div class="container">   
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <form method="post" action="/novo_contato">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="nome">
                                Nome</label>
                            <input type="text" class="form-control" name="nome" id="nome" placeholder="Informe seu nome" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="email">
                                Email</label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Informe seu email" required="required" /></div>
                        </div>
                        <div class="form-group">
                            <label for="assunto">
                                Assunto</label>
                            <select id="assunto" name="assunto" class="form-control" required="required">
                                <option value="" selected="">Selecione:</option>
                                <option value="suporte">Suporte</option>
                                <option value="venda">Vendas</option>
                                <option value="outro">Outro</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="mensagem">
                                Message</label>
                            <textarea name="mensagem" id="mensagem" class="form-control" rows="4" cols="25" required="required" placeholder="Sua Mensagem"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                            Enviar</button>
                    </div>


                </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <form>
            <legend><span class="glyphicon glyphicon-globe"></span> Nosso Endereço</legend>
            <address>
                <strong>E- Soft Web Systens, Inc.</strong><br>
                795 Rua das Pedras<br>
                Cascavel PR <br>
                <strong title="Phone">
                    Telefone:</strong>
                (45) 9965-5646
            </address>
            <address>
                <strong>E-mail para contato</strong><br>
                <a href="mailto:#">contato@esoft.com</a>
            </address>
            </form>
             <div class="row">
                <form action="/limpar" method="post">
                 <div class="col-md-12">
                        <button type="submit" class="btn btn-danger pull-right" id="btnContactUs">
                            Limpar</button>
                    </div>
              </form>
          </div>
        </div>

        <div class="container">
        <div class="row">
            <% Mensagem.all.each do |m| %>
            <li> Nome : <%= m.nome %></li>
            <li> E-mail : <%= m.email %></li>
            <li> Assunto : <%= m.assunto %></li>
            <li> Mesagem : <%= m.mensagem %></li>
            <% end %>
        </div>
    </div>
    </div>


